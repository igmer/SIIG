{% extends 'GridFormBundle:Formulario:show.html.twig' %}
{% block frm_opciones %}
    <div class="form-group" id="mes_anio_f"></div>
    <div class="form-group" id="dependencia_f" style="width: 100%">
        <select id="periodo_estructura" name="periodo_estructura">
            <option value="-1" selected>{{'_elija_parametros_'|trans}}</option>
            {% for pEstructura in periodos %}
                <optgroup label="{% if pEstructura.unidad.nivel == 1 %}
                                {{pEstructura.unidad}}
                            {% elseif pEstructura.unidad.nivel == 2 %}
                                {{pEstructura.unidad.parent}}::{{pEstructura.unidad}}
                            {% elseif pEstructura.unidad.nivel == 3 %}
                                 {{pEstructura.unidad.parent.parent}} :: {{pEstructura.unidad.parent}} :: {{pEstructura.unidad}}
                            {% endif%}">
                    {% for periodo in pEstructura.datos %}
                        {% if (periodo.formulario.periodoLecturaDatos == 'mensual') %}                            
                            {% set periodo_ =  periodo.periodo_mes ~'/' ~periodo.periodo_anio %}
                        {% else %}
                            {% set periodo_ =  periodo.periodo_anio %}
                        {% endif %}
                        <option value="{{periodo.id}}" {% if periodo.id == parametros.periodo_estructura %}selected="selected"{% endif %} >
                            {{periodo_}} :: {{periodo.formulario.nombre}}
                        </option>
                    {% endfor %}
                </optgroup>                            
            {% endfor %}
        </select>
        
        {% if (periodoSeleccionado == null or parametros.periodo_estructura == '-1') and numero_carga == 2 %}
            <center>
                <button type="button" class="btn btn-xs btn-danger" data-toggle="popover" 
                        data-content="{{'_elija_un_formulario_'|trans}}"
                        data-placement="bottom"
                        animation = 'true'
                        >
                    <span class="glyphicon glyphicon-chevron-up" aria-hidden="true" style="float: left;"></span>
                </button>
            </center>
            <script type="text/javascript">
                $(document).ready(function () {                            
                    $('#modal_msj_solo_fondo').modal('show');
                });
            </script>
        {% endif %}
    </div>
{% endblock %}