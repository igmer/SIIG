{% extends 'IndicadoresBundle::standard_layout.html.twig' %}
{% block content %}
<style>
    td{
        min-width: 30px;
        min-height: 90px;
    }
    td.valores{
        text-align: right;
    }
    td.nombre_variable{
        vertical-align: middle !important;
    }
    table{
        background-color: white;
    }
</style>

    <TABLE  class="table table-hover table-bordered">
        <THEAD>
            <TR>
                <TH COLSPAN=2 ></TH>
                {% for anio, anios in parms %}
                    {% for mes in anios %}
                        <TH>{{ mes ~ '/' ~ anio}}</TH>
                    {% endfor %}
                {% endfor %}
            </TR>
        </THEAD>
        <TBODY>
            {% for variable in datosFrm %}
                <TR>                    
                    <TD rowspan="4" class="nombre_variable">{{variable.descripcion}}</TD>
                </TR>
                <TR>
                    <Th>Real</Th>
                    {% for anio, anios in parms %}
                        {% for mes in anios %}
                            <TD class="valores">
                                {% if variable['datos']['real'][mes ~ '/' ~ anio] is defined %}
                                    {{variable['datos']['real'][mes ~ '/' ~ anio] }}
                                {% endif %}
                            </TD>
                        {% endfor %}
                    {% endfor %}
                </TR>
                <TR>
                    <TH>Planificado</TH>
                    {% for anio, anios in parms %}
                        {% for mes in anios %}
                            <TD class="valores">
                                {% if variable['datos']['planificado'][mes ~ '/' ~ anio] is defined %}
                                    {{variable['datos']['planificado'][mes ~ '/' ~ anio] }}
                                {% endif %}
                            </TD>
                        {% endfor %}
                    {% endfor %}
                </TR>
                <TR>
                    <TH>Estatus</TH>
                    {% for anio, anios in parms %}
                        {% for mes in anios %}
                            <TD class="valores">
                                {% if variable['datos']['estatus'][mes ~ '/' ~ anio] is defined and variable['datos']['estatus'][mes ~ '/' ~ anio] != null %}
                                    {{variable['datos']['estatus'][mes ~ '/' ~ anio] }}%
                                {% endif %}
                            </TD>
                        {% endfor %}
                    {% endfor %}
                </TR>
            {% endfor %}
        </TBODY>
    </TABLE>
{% endblock content%}